<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".WriteActivity">


    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/brn_bg"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_noticeTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="제목을 입력하세요"
                android:imeOptions="actionDone"
                android:padding="5dp"
                android:privateImeOptions="defaultInputmode=korean"
                android:textColor="@color/black"
                android:textColorHint="#808080">

                    </EditText>

                </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/brn_bg"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.6"
                android:gravity="center"
                android:text="작성자 : "
                android:textColor="@color/black"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/et_noticeUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4.4"
                android:background="@null"
                android:text="닉네임"
                android:padding="5dp"
                android:textColor="@color/black"
                ></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/brn_bg"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:weightSum="5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.35"
                android:gravity="center"
                android:text="작성날짜:"
                android:textColor="@color/black"
                android:textSize="16dp">

            </TextView>

            <TextView
                android:id="@+id/et_noticeDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4.7"
                android:background="@null"

                android:imeOptions="actionDone"
                android:padding="5dp"
                android:privateImeOptions="defaultInputmode=korean"
                android:textColor="@color/black"
                >

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/brn_bg"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_noticeDes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:background="@null"
                android:hint="내용을 입력하세요"
                android:imeOptions="actionDone"
                android:padding="5dp"
                android:privateImeOptions="defaultInputmode=korean"
                android:textColor="@color/black"
                android:textColorHint="#808080">

            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/putButton"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/brn_bg2"
            android:text="글쓰기"></Button>
    </LinearLayout>
</LinearLayout>

